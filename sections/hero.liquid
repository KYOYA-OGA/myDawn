{{ 'section-hero.css' | asset_url | stylesheet_tag }}
{{ 'custom-parallax.js' | asset_url | script_tag }}

<div class="hero-main">
  <div>
    <img src="{{ 'gahag-fruits.svg' | asset_url }}" alt="" class="rellax">
    <h1>こんにちは</h1>
  </div>
</div>

<div class="hero-collections">
  <div class="hero-collections__card-container">
    {% for block in section.blocks %}
    <a href="{{ block.settings.collection.url }}" class="hero-collections__card">
      <div class="hero-collections__card--bg"
        style="background-image: url({{ block.settings.image_bg | img_url: 'Medium' }})"></div>
      <div class="hero-collections__card--hover"
        style="background-image: url({{ block.settings.image_hover | img_url: 'Medium' }})"></div>
      <h3 class="hero-collections__card-title">{{ block.settings.collection.title | downcase }}</h3>
    </a>
    {% endfor %}
  </div>
</div>



{% schema %}
{
  "name": "Hero",
  "blocks": [
      {
        "type": "collection",
        "limit": 3,
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          },
          {
            "type": "image_picker",
            "id": "image_bg",
            "label": "Image background"
          },
          {
            "type": "image_picker",
            "id": "image_hover",
            "label": "Image Hover"
          }
        ]
      }
    ],
"presets": [
{
"name": "Hero"
}
]
}
{% endschema %}
